generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

//TERRIBLY UNSECURE!!!! Good thing this is just a proof of concept project! :S
datasource postgresql {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  userId   Int     @id @default(autoincrement())
  email    String  @unique @db.VarChar(255)
  fName    String? @db.VarChar(50)
  lName    String? @db.VarChar(50)
  pass     String  @db.VarChar(50)
  dId      Int?
  userType Boolean
}

model Course {
  cId         Int      @id @default(autoincrement())
  shortname   String   @db.VarChar(50)
  coursename  String   @db.VarChar(255)
  credits     Int
  isambig     Boolean
  prereq      String[] @db.VarChar(20)
  description String?  @db.VarChar(1024)
}

model Degree {
  dId     Int      @id @default(autoincrement())
  degree  String   @db.VarChar(50)
  courses Int[]
}

model SavedSem {
  sem_id  Int     @id @default(autoincrement())
  u_id    Int
  users   Users   @relation(fields: [u_id], references: [userid])
  courses Int[]
  sname   String  @db.VarChar(50)
}
